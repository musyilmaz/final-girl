{
  "name": "final_girl",
  "description": "web based implementation of final girl boardgame",
  "version": "0.0.1",
  "engines": {
    "node": ">=18"
  },
  "author": "musyilmaz (musyilmaz.dev)",
  "license": "ISC",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "frontend": "pnpm --filter @final_girl/frontend",
    "ui": "pnpm --filter @final_girl/ui",
    "lib": "pnpm --filter @final_girl/lib",
    "ui:add": "pnpm --filter @final_girl/ui ui:add",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "husky": "^8.0.0"
  }
}
